@model IReadOnlyList<ItemListViewModel>
@{
    ViewData["Title"] = "Item Index";
}

<div class="container-fluid">
<div class="row justify-content-between align-content-center">
    <h1 class="col-3">Item Index</h1>
    <div class="col-1 align-content-center">
        <a asp-action="Add" asp-controller="Item" class="btn btn-outline-primary ">Add</a>
    </div>

</div>
</div>


<div>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.Count > 0)
            {
                foreach (var Item in Model)
                {
                    <tr>
                        <td>@Item.Id</td>
                        <td>@Item.Name</td>
                        <th>
                            <a asp-action="Details" asp-controller="Item" asp-route-Id="@Item.Id" class="btn btn-primary">Details</a>
                            <a asp-action="Edit" asp-controller="Item" asp-route-Id="@Item.Id" class="btn btn-success">Edit</a>
                            <a asp-action="Delete" asp-controller="Item" asp-route-Id="@Item.Id" class="btn btn-danger">Delete</a>

                        </th>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3">No Items yet</td>
                </tr>

            }
        </tbody>
    </table>
</div>

