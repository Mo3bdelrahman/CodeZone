@model ItemListViewModel
@{
    ViewData["Title"] = "Delete";
}

<div class="row justify-content-center">
    <div class="col-md-8 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-title">Delete Item</p>
                <div class="row">
                    <div class="col-12">
                        <h3 class="card-text">Are you sure you want to delete <strong>@Model.Name</strong> Item?</h3>
                        <div class="form-group ">
                            <a asp-action="ConfirmDelete" asp-controller="Item" asp-route-Id="@Model.Id" class="btn btn-danger">Delete</a>
                            <a asp-action="Index" asp-controller="Item" class="btn btn-light">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

