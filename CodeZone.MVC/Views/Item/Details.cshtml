@model ItemDetailesViewModel
@{
    ViewData["Title"] = "Details";
}

<h1>Item Details</h1>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 offset-md-3 mt-4">
            <div class="card" style="width: 22rem;">
                <img src="~/@Model.Image" class="card-img-top" alt="Item Image" >
                <div class="card-body">
                    <p class="card-text">ID: <strong> @Model.Id</strong> </p>
                    <p class="card-text">Name: <strong>@Model.Name </strong></p>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index" asp-controller="Item" class="btn btn-warning">Back to List</a>
    <a asp-action="Edit" asp-controller="Item" asp-route-Id="@Model.Id" class="btn btn-success">Edit</a>
    <a asp-action="Delete" asp-controller="Item" asp-route-Id="@Model.Id" class="btn btn-danger">Delete</a>
</div>

