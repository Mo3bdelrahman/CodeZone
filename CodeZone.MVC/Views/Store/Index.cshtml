@model IReadOnlyList<StoreViewModel>
@{
    ViewData["Title"] = "Store Index";
}
<div class="container-fluid">
    <div class="row justify-content-between align-content-center">
        <h1 class="col-3">Store Index</h1>
        <div class="col-1 align-content-center">
            <a asp-action="Add" asp-controller="Store" class="btn btn-outline-primary ">Add</a>
        </div>

    </div>
</div>


<div>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.Count > 0)
            {
                foreach (var store in Model)
                {
                    <tr>
                        <td>@store.Id</td>
                        <td>@store.Name</td>
                        <th>
                            <a asp-action="Details" asp-controller="Store" asp-route-Id="@store.Id" class="btn btn-primary">Details</a>
                            <a asp-action="Edit" asp-controller="Store" asp-route-Id="@store.Id" class="btn btn-success">Edit</a>
                            <a asp-action="Delete" asp-controller="Store" asp-route-Id="@store.Id" class="btn btn-danger">Delete</a>
                         
                        </th>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3">No Stores yet</td>
                </tr>

            }
        </tbody>
    </table>
</div>


