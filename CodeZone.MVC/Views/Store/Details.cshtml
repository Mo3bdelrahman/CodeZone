@model StoreDetailesViewModel
@{
    ViewData["Title"] = "Details";
}

<h1>Store Details</h1>
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3 mt-4">
            <div class="card">
                <div class="card-body">
                    <p class="card-text">ID: <strong> @Model.Id</strong> </p>
                    <p class="card-text">Name: <strong>@Model.Name </strong></p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div>
            <a asp-action="Index" asp-controller="Store" class="btn btn-warning">Back to List</a>
            <a asp-action="Edit" asp-controller="Store" asp-route-Id="@Model.Id" class="btn btn-success">Edit</a>
            <a asp-action="Delete" asp-controller="Store" asp-route-Id="@Model.Id" class="btn btn-danger">Delete</a>
        </div>

    </div>

    <div class="row">
        <h3>Store Items</h3>
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @if (Model?.Items?.Count > 0)
                {
                    foreach (var Item in Model.Items)
                    {
                        <tr>
                            <td>@Item.Id</td>
                            <td>@Item.Name</td>
                            <th>
                                <a asp-action="Details" asp-controller="Item" asp-route-Id="@Item.Id" class="btn btn-primary">Details</a>
                                <a asp-action="Edit" asp-controller="Item" asp-route-Id="@Item.Id" class="btn btn-success">Edit</a>
                                <a asp-action="Delete" asp-controller="Item" asp-route-Id="@Item.Id" class="btn btn-danger">Delete</a>
                                <a asp-action="Purchase" asp-controller="Process" asp-route-itemId="@Item.Id" asp-route-storeId="@Model.Id" class="btn btn-outline-primary">Purchase</a>
                                <a asp-action="Sell" asp-controller="Process" asp-route-itemId="@Item.Id" asp-route-storeId="@Model.Id" class="btn btn-outline-success">Sell</a>
                            </th>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3">No Items yet</td>
                    </tr>

                }
            </tbody>
        </table>
    </div>

</div>


